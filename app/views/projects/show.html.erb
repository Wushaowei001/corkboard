<div class="container">

  <!-- project title -->
  <div class="row">
    <div class="col-md-6">
      <h1 id="repo-name"><%= "#{current_user.username}/#{@repo_name}" %></h1>
    </div>

    <div class="add-issue text-right col-md-6">
      <a class="btn btn-default" href="#" role="button"><span class="glyphicon glyphicon-plus"></span> Add Issue</a>
    </div>
  </div>

  <!-- column names -->
  <div class="row">
    <div class="col-md-4">
      <h3 class="text-center">Backlog</h3>
    </div>

    <div class="col-md-4">
      <h3 class="text-center">In Progress</h3>
    </div>

    <div class="col-md-4">
      <h3 class="text-center">Complete</h3>
    </div>
  </div>

  <!-- cards -->
  <div class="row">
    <div id="backlog" class="col-md-4">
    </div>

    <div id="in-progress" class="col-md-4">
    </div>

    <div id="complete" class="col-md-4">
    </div>
  </div>
</div>
